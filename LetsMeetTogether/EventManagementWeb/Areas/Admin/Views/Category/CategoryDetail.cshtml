@model EntityLayer.Concrete.Category

@{
    ViewData["Title"] = "CategoryDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Düzenle</h1>

@using (Html.BeginForm("CategoryDetail", "Category", FormMethod.Post))
{

    @Html.LabelFor(x =>x.CategoryID)
    @Html.TextBoxFor(x =>x.CategoryID, new { @class = "form-control", @readonly = "readonly" })
    <br />
    @Html.LabelFor(x => x.Name)
    @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    <br />


    <button class="btn btn-primary">Kategori Güncelle</button>


}
