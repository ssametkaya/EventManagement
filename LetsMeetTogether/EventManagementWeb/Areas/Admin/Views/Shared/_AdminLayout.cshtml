        <a href="~/Admin/Category/Index" class="w3-bar-item w3-button">Kategoriler</a>
        <a asp-area="" asp-controller="Home" asp-action="Index" class="w3-bar-item w3-button">Siteye Git</a>
        
    </div>

    <!-- Page Content -->
    <div style="margin-left:10%">

        <div class="w3-container w3-teal">
            <h1>Admin Yönetim Paneli</h1>
        </div>
        <div class="w3-container">
            @RenderBody()
        </div>

    </div>

</body>
</html>
